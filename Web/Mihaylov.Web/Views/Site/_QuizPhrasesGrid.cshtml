@using Mihaylov.Api.Site.Client
@using Mihaylov.Web.Controllers
@using Mihaylov.Web.Models.Configs
@using Mihaylov.Web.Models.Site
@model IEnumerable<QuizPhrase>

<table class="table table-bordered table-striped">
    <tbody>
        <tr>
            @{ int count = 0; int maxColumns = 3; }
            @foreach (var phrase in Model)
            {
                <td class="col-sm-4" data-phrase-order="@phrase.OrderId">@phrase.Text</td>
                if (++count % maxColumns == 0)
                {
                    @:</tr><tr>
                }
            }
        </tr>
    </tbody>
</table>

@using (Html.BeginForm(nameof(SiteController.SaveQuizPhrase),  SiteController.NAME, FormMethod.Post, new { }))
{
    <div class="row">
        <div class="panel">
            @Html.Label(nameof(QuizPhraseModel.Text))
            @Html.TextBox(nameof(QuizPhraseModel.Text), string.Empty, new { style = "width:470px" })
        </div>

        <button type="submit" class="submit-btn btn btn-primary">
            <i class="bi @ViewConstants.SaveButton"></i>
        </button>
    </div>
}