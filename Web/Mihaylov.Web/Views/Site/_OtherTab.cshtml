@using Mihaylov.Web.Controllers
@using Mihaylov.Web.Models.Site
@model OtherTabModel

<div id="update-person-container" style="margin-bottom:20px" data-url="@Model.ApiUrl" data-token="@Model.TokenName">

    <span class="btn btn-primary start-new-update">Update</span>
    <span class="btn btn-secondary update-count"></span>
    
    <div class="progress" style="margin-top:1rem">
        <div id="single-progress-bar" class="progress-bar bg-info" role="progressbar" style="" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    
    <div class="progress" style="margin-top:1rem">
        <div id="total-progress-bar" class="progress-bar bg-info" role="progressbar" style="" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>