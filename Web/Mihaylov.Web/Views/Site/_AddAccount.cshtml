@using Mihaylov.Web.Controllers
@using Mihaylov.Web.Helpers
@using Mihaylov.Web.Models.Site
@model AccountExtended

@{
    var accountTypes = Model.AccountTypes.GetDropdownListItems(u => u.Id, u => u.Name);
    var accountStates = Model.AccountStates.GetDropdownListItems(u => u.Id, u => u.Name);
}

@using (Html.BeginForm(nameof(SiteController.SaveAccount), SiteController.NAME, FormMethod.Post, new { @class = "form" }))
{
    <fieldset>
        <div class="form-row">
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.AccountTypeId, "Type")
                @Html.DropDownListFor(m => Model.AccountTypeId, accountTypes, ViewConstants.DefaultValue, new { @class = ViewConstants.EdithorClass, style = ViewConstants.Width100 })
                @Html.ValidationMessageFor(m => Model.AccountTypeId)
            </div>
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.Username)
                @Html.TextBoxFor(m => Model.Username, new { @class = ViewConstants.EdithorClass, aria_autocomplete = "none", autocomplete = "off" })
                @Html.ValidationMessageFor(m => Model.Username)
            </div>
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.DisplayName)
                @Html.TextBoxFor(m => Model.DisplayName, new { @class = ViewConstants.EdithorClass, style = ViewConstants.Width100, aria_autocomplete = "none", autocomplete = "off" })
            </div>
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.StatusId, "Status")
                @Html.DropDownListFor(m => Model.StatusId, accountStates, ViewConstants.DefaultValue, new { @class = ViewConstants.EdithorClass, style = ViewConstants.Width200 })
            </div>
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.AskDate)
                @Html.TextBoxFor(m => Model.AskDate, ViewConstants.DateFormat, new { @class = ViewConstants.EdithorClass, style = ViewConstants.Width100 })
                @Html.ValidationMessageFor(m => Model.AskDate)
            </div>
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.CreateDate)
                @Html.TextBoxFor(m => Model.CreateDate, ViewConstants.DateFormat, new { @class = ViewConstants.EdithorClass, style = ViewConstants.Width100 })
            </div>
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.LastOnlineDate)
                @Html.TextBoxFor(m => Model.LastOnlineDate, ViewConstants.DateFormat, new { @class = ViewConstants.EdithorClass, style = ViewConstants.Width100 })
            </div>
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.ReconciledDate)
                @Html.TextBoxFor(m => Model.ReconciledDate, ViewConstants.DateFormat, new { @class = ViewConstants.EdithorClass, style = ViewConstants.Width100 }) @* , @disabled = "disabled" *@
            </div>
            <div class="form-group col-auto">
                @Html.LabelFor(m => Model.Details)
                @Html.TextBoxFor(m => Model.Details, new { @class = ViewConstants.EdithorClass, aria_autocomplete = "none", autocomplete = "off" })
            </div>
            <div class="form-group col-auto">
                @Html.HiddenFor(m => Model.Id)
                @Html.HiddenFor(m => Model.PersonId)
                <button type="submit" class="submit-btn btn btn-primary">Save</button>
                <span class="btn btn-danger close-account-button">Close</span>
            </div>
        </div>
    </fieldset>
}