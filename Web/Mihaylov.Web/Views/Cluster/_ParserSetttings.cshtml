@using Mihaylov.Web.Controllers
@using Mihaylov.Web.Models.Cluster
@using Mihaylov.Web.Models.Configs
@model ClusterMainModel


<table class="table table-bordered table-striped" id="parser-settings-grid">
    <thead>
        <tr>
            <th>@Html.LabelFor(m => m.ParserSettings.First().ApplicationName, "Application")</th>
            <th>@Html.LabelFor(m => m.ParserSettings.First().VersionUrlType, "Version")</th>
            <th>@Html.LabelFor(m => m.ParserSettings.First().VersionSelector, "Selector")</th>
            <th>@Html.LabelFor(m => m.ParserSettings.First().VersionCommand, "Command")</th>
            <th>@Html.LabelFor(m => m.ParserSettings.First().ReleaseDateUrlType, "ReleaseDate")</th>
            <th>@Html.LabelFor(m => m.ParserSettings.First().ReleaseDateSelector, "Selector")</th>
            <th>@Html.LabelFor(m => m.ParserSettings.First().ReleaseDateCommand, "Command")</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @await Html.PartialAsync("_AddParserSetting", Model.ParserSetting)

        <tr style="border-bottom: 2pt solid black;"></tr>
        <tr></tr>

        @foreach (var setting in Model.ParserSettings)
        {
            <tr>
                <td><my-value>@setting.ApplicationName</my-value></td>
                <td><my-value>@setting.VersionUrlType.ToString()</my-value></td>
                <td><my-value>@setting.VersionSelector</my-value></td>
                <td><my-value>@setting.VersionCommand</my-value></td>
                <td><my-value>@setting.ReleaseDateUrlType.ToString()</my-value></td>
                <td><my-value>@setting.ReleaseDateSelector</my-value></td>
                <td><my-value>@setting.ReleaseDateCommand</my-value></td>
                <td>
                    <a href="/Cluster/Index?settingId=@setting.Id" class="btn btn-primary">
                        <i class="bi @ViewConstants.EditButton"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>