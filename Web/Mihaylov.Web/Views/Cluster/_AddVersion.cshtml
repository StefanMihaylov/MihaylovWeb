@namespace Mihaylov.Web.Models.Cluster
@using Mihaylov.Web.Models.Configs
@model AddVersionModel

<form action="/Cluster/AddVersion" method="post">
    <tr>
        <td></td>
        <td>
            @Html.DropDownListFor(m => m.ApplicationId, Model.Applications, ViewConstants.DefaultDropDownValue)
            @Html.ValidationMessageFor(m => m.ApplicationId)
        </td>
        <td>
            @Html.TextBoxFor(m => m.ReleaseDate, "{0:yyyy.MM.dd}", new { aria_autocomplete = "none", autocomplete = "off", @class = "short-width", style="max-width: 150px;" })
            @Html.ValidationMessageFor(m => m.ReleaseDate)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Version, new { aria_autocomplete = "none", autocomplete = "off", @class = "tiny-width" })
            @Html.ValidationMessageFor(m => m.Version)
        </td>
        <td>
            @Html.TextBoxFor(m => m.HelmVersion, new { aria_autocomplete = "none", autocomplete = "off", @class = "tiny-width" })
            @Html.ValidationMessageFor(m => m.HelmVersion)
        </td>
        <td style="display: none;">
            @Html.TextBoxFor(m => m.HelmAppVersion, new { aria_autocomplete = "none", autocomplete = "off", @class = "tiny-width" })
            @Html.ValidationMessageFor(m => m.HelmAppVersion)
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <button type="submit" class="btn btn-success">
                <i class="bi @ViewConstants.NewButton"></i>
            </button>
        </td>
    </tr>
</form>
