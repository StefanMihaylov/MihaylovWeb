@using Mihaylov.Api.Other.Client;
@model IEnumerable<AlbumModel>

<div class="row">
    @foreach (var album in Model)
    {
        <div class="gallery-container col-md-2">
            <a href="@album.AlbumLink" target="_blank" class="gallery-link">
                <div class="gallery-wraper">
                    <img src="/Gallery/Thumbnail/@album.ThumbnailAssetId" />
                    <div class="gallery-caption">
                        <div class="title">@album.Name</div>
                        <div>@album.StartDate.ToString("dd.MM") - @album.EndDate.ToString("dd.MM.yyyy")</div>
                        <div>@album.AssetCount снимки</div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>