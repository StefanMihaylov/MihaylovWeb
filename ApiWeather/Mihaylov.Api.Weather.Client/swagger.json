{
  "openapi": "3.0.1",
  "info": {
    "title": "Weather API",
    "description": "Seek-Ah Weather API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "https://localhost:63711/"
    }
  ],
  "paths": {
    "/api/Module/GetInfo": {
      "get": {
        "tags": [
          "Module"
        ],
        "operationId": "ModuleGetInfo",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ModuleInfo"
                }
              }
            }
          }
        }
      }
    },
    "/api/Weather/Current": {
      "get": {
        "tags": [
          "Weather"
        ],
        "parameters": [
          {
            "name": "City",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "MetricUnits",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "Language",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentWeatherModel"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/Weather/Forecast": {
      "get": {
        "tags": [
          "Weather"
        ],
        "parameters": [
          {
            "name": "City",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "MetricUnits",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "Language",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ForecastWeatherModel"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CurrentWeatherModel": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "nullable": true
          },
          "country": {
            "type": "string",
            "nullable": true
          },
          "currentDate": {
            "type": "string",
            "nullable": true
          },
          "condition": {
            "type": "string",
            "nullable": true
          },
          "conditionIcon": {
            "type": "string",
            "nullable": true
          },
          "temperature": {
            "type": "number",
            "format": "double"
          },
          "feelsLike": {
            "type": "number",
            "format": "double"
          },
          "temperatureUnit": {
            "type": "string",
            "nullable": true
          },
          "wind": {
            "type": "number",
            "format": "double"
          },
          "windUnit": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ForecastDayModel": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "nullable": true
          },
          "condition": {
            "type": "string",
            "nullable": true
          },
          "conditionIcon": {
            "type": "string",
            "nullable": true
          },
          "maxTemp": {
            "type": "number",
            "format": "double"
          },
          "minTemp": {
            "type": "number",
            "format": "double"
          },
          "dailyChanceOfRain": {
            "type": "integer",
            "format": "int32"
          },
          "dailyChanceOfSnow": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ForecastWeatherModel": {
        "type": "object",
        "properties": {
          "current": {
            "$ref": "#/components/schemas/CurrentWeatherModel"
          },
          "forecast": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ForecastDayModel"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ModuleInfo": {
        "type": "object",
        "properties": {
          "moduleName": {
            "type": "string",
            "nullable": true
          },
          "version": {
            "type": "string",
            "nullable": true
          },
          "framework": {
            "type": "string",
            "nullable": true
          },
          "buildDate": {
            "type": "string",
            "nullable": true
          },
          "gitCommit": {
            "type": "string",
            "nullable": true
          },
          "jenkinsBuildNumber": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}